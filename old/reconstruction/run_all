#!/bin/sh

echo -e "Run all reconstrcuctions.\n"



for e in 3 10
do 
    echo " ========================================================================="
    echo -e " ||\t\t\t\t ebeam: $e TeV \t\t\t\t||"
    echo " ========================================================================="

    for m in 02 1
    do 
        echo -e " \t=========================================================="
        echo -e " \t||\t\t\t mN: $m TeV \t\t\t||"
        echo -e " \t==========================================================\n"
        FILE="allinone.C(\"s${e}_${m}\", true, 0)"
        echo -e "\t----------------------------------------------"
        echo -e "\t----- Runing $FILE -----"
        echo -e "\t----------------------------------------------\n\n\n"
        root -l << EOC 
        .x $FILE 
        .q 
EOC
        
    done
        FILE="allinone.C(\"b${e}\", true, 0)"
        echo -e "\t----------------------------------------------"
        echo -e "\t----- Runing $FILE -----"
        echo -e "\t----------------------------------------------\n\n\n"
        root -l << EOC 
        .x $FILE 
        .q 
EOC
    echo -e "\n\n"
done
